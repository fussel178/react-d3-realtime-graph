{
	"name": "d3-app-typescript",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test",
		"style": "prettier --write package.json '**/*{.ts,.tsx,.js,.jsx,.json,.html,.css,.scss,.sass,.yaml,.yml,.md}'",
		"style:ci": "prettier --list-different package.json '**/*{.ts,.tsx,.js,.jsx,.json,.html,.css,.scss,.sass,.yaml,.yml,.md}'",
		"lint": "eslint --ext .js,.jsx,.ts,.tsx --ignore-pattern node_modules/ --no-error-on-unmatched-pattern src",
		"clean": "rimraf build",
		"eject": "react-scripts eject"
	},
	"engines": {
		"node": ">=14",
		"npm": ">=7"
	},
	"dependencies": {
		"d3": "^7.0.0",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-virtualized-auto-sizer": "^1.0.6"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^5.14.1",
		"@testing-library/react": "^12.0.0",
		"@testing-library/user-event": "^13.2.1",
		"@types/d3": "^7.0.0",
		"@types/jest": "^26.0.24",
		"@types/node": "^16.4.13",
		"@types/react": "^17.0.16",
		"@types/react-dom": "^17.0.9",
		"@types/react-virtualized-auto-sizer": "^1.0.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^3.4.0",
		"prettier": "2.3.2",
		"react-scripts": "4.0.3",
		"rimraf": "^3.0.2",
		"typescript": "^4.3.5"
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest",
			"plugin:prettier/recommended",
			"prettier"
		],
		"plugins": [
			"prettier"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
